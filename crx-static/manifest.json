{
  "name": "***DEV*** High Ticket Niche research Tools",
  "short_name": "HTDS Niche Research Tools",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "HTDS Tools helps you do niche research on Shopify stores.",
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "background": {
    "page": "crx-background/index.html",
    "persistent": true
  },
  "browser_action": {
    "default_icon": "icons/icon.png",
    "default_title": "HTDS Spider"
  },
  "permissions": [
    "https://trends.google.com/*",
    "https://www.google.com/search*",
    "https://www.alexa.com/minisiteinfo*",
    "https://*.myshopify.com/*",
    "activeTab",
    "storage",
    "contextMenus",
    "unlimitedStorage",
    "webRequest", "webRequestBlocking"
  ],
  "content_security_policy": "script-src 'self' https://kit.fontawesome.com 'unsafe-eval'; object-src 'self'",
  "web_accessible_resources": [
    "img/*",
    "js/*"
  ]
}
