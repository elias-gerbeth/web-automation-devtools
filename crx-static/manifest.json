{
  "name": "Web automation Dev-tools",
  "short_name": "Web automation Dev-tools",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Web automation Dev-tools",
  "icons": {
    "16": "img/logo.png",
    "48": "img/logo.png",
    "128": "img/logo.png"
  },
  "background": {
    "page": "background/index.html",
    "persistent": true
  },
  "devtools_page": "dev-tools-init/dev-tools.html",
  "permissions": [
    "<all_urls>",
    "activeTab",
    "storage",
    "contextMenus",
    "unlimitedStorage",
    "webRequest", "webRequestBlocking"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "web_accessible_resources": [
    "img/*",
    "js/*"
  ]
}
