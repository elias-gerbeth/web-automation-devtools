{
  "name": "OAGenius Fulfillment Tool",
  "short_name": "OAGenius Fulfillment Tool",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "OAGenius Fulfillment Tool",
  "icons": {
    "16": "img/logo.png",
    "48": "img/logo.png",
    "128": "img/logo.png"
  },
  "background": {
    "page": "background/index.html",
    "persistent": true
  },
  "browser_action": {
    "default_icon": "img/logo.png",
    "default_title": "OAGenius Fulfillment"
  },
  "permissions": [
    "https://app.oagenius.com/*",
    "https://*.walmart.com/*",
    "activeTab",
    "storage",
    "contextMenus",
    "unlimitedStorage",
    "webRequest", "webRequestBlocking"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "web_accessible_resources": [
    "img/*",
    "js/*"
  ]
}
